<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="55dp"
        tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="55dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/ugb"
            android:layout_width="220dp"
            android:layout_height="220dp"
            app:srcCompat="@drawable/ugb"
            android:layout_marginBottom="45dp"/>

        <TextView
            android:id="@+id/nombre1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Josué Amílcar López Benítez"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#041570"
            android:textAlignment="center"
            android:layout_marginBottom="35dp"/>

        <TextView
            android:id="@+id/nombre2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Andy Rodrigo Sorto Castillo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF041570"
            android:textAlignment="center"
            android:layout_marginBottom="85dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/ovalo"
            android:text="Iniciar"
            android:onClick="log"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#1281DA" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>